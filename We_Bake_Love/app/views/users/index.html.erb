<%= stylesheet_link_tag "user_data_view.css" %>
<h1>Users Data</h1>
<table>
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Operations</th>
    <th>Promote</th>
    <th>Degrade</th>
  </thead>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.role%></td>
    <td>
      <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete this user?"} %>
    </td>
    <td>
      <%= link_to "Promote", promote_path(user),data: { confirm: "Are you sure you want to upgrade this user to admin?"} %>
    </td>
     <td>
      <%= link_to "Degrade", degrade_path(user),data: { confirm: "Are you sure you want to degrade this user to user?"} %>
    </td>
  </tr>
  <% end %>
</table>
